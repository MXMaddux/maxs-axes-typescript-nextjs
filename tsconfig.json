{
  "compilerOptions": {
    "target": "ES2017", // Ensure compatibility with modern ECMAScript features
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs", // Use CommonJS for compatibility with Node.js scripts
    "moduleResolution": "node", // Use Node-style module resolution
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "outDir": "./dist" // Specify an output directory for compiled files
    ,
    "noEmit": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "prisma/seed.ts" // Include the seed script explicitly
  ],
  "exclude": [
    "node_modules"
  ]
}
